#selber.kv
WindowManager:
    FirstWindow:
        
<FirstWindow>:
    name: 'first'
    
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: (1,1)
        
        # Haupt Widget für Bottom Navigation
        MDBottomNavigation:
            panel_color: '#ACC8E5'
            selected_color_background: "#97ecf8"
            text_color_active: 0, 0, 0, 1
            
            #Tab Startseite
            MDBottomNavigationItem:
                id: startseite
                name: 'startseite'
                text: 'Startseite'
                icon: 'menu'
                disabled: False
               #badge_icon: "numeric-0"
               #on_tab_press: root.ausgabe(self.text)
                
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint:(1,1)
                    padding: 50
     
                    #Card
                    MDCard:
                        size_hint: (0.9,0.9)
                        pos_hint: {'center_x':0.5, 'center_y':0.5}
            
                        #Foto Hintergrund
                        FitImage:
                            source: 'pic.jpg'
                            radius: 50
                            
                    MDBoxLayout:
                        orientation:'vertical'
                        size_hint:(1,0.2)
                        
                        MDLabel:
                            text: 'Wilkommen zur Rechenapp'
                            halign:'center'
                            font_size: 70
                            
                            # Ende Startseite Beginn Tab Rechner
                        
            # Tab Rechner Plus Minus
            MDBottomNavigationItem:
                id: rechner
                name: 'rechenaufgabe'
                text: 'Plus Minus Rechner'
                icon: 'eject'
                #badge_icon: "numeric-0"
                #on_tab_press: root.ausgabe(self.text)
                
                # Layout für den Cancel Button
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y: 0.6
                    pos_hint: {'top':1}
                    # Cancel Button zum aktivieren der restlichen Nav Bar
                    MDIconButton:
                        id: close_btn
                        icon: 'close'
                        pos_hint: {'x':0, 'y':0.8}
                        opacity: 0
                        on_release: root.close_btn()
                    # Label für die Rechnung zum anzeigen
                    MDLabel:
                        id: rechnung
                        text: 'Hallo'
                        halign: 'center'
                        pos_hint: {'center_x':0.5, 'center_y':0.3}
                        opacity: 0
                        font_size: 80
                    MDLabel:
                        id: counter_richtig
                        text:''
                        halign: 'center'
                        pos_hint: {'center_x':0.5, 'center_y':0.15}
                        opacity: 0
                        font_size: 60
                    MDLabel:
                        id: counter_falsch
                        text:''
                        halign: 'center'
                        pos_hint: {'center_x':0.5, 'center_y':0.10}
                        opacity: 0
                        font_size: 60
                        
                        
                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: 0.4
                        size_hint_x: 1
                        spacing: 40
                        padding: 10
                        #pos_hint: {'center_x':0.5, 'y':0.5}
                            
                        MDRaisedButton:
                            id: btn1
                            text:'Seas'
                            size_hint:(0.2,0.6)
                            opacity: 0
                            disabled:True
                            on_press: root.check_answer(self.text)
                        MDRaisedButton:
                            id: btn2
                            text:'Hallo'
                            size_hint:(0.2,0.6)
                            opacity: 0
                            disabled:True
                            on_press: root.check_answer(self.text)
                        MDRaisedButton:
                            id: btn3
                            text:'Seas'
                            size_hint: (0.2,0.6)
                            opacity:0
                            disabled:True
                            on_press: root.check_answer(self.text)
                        
                    
 
                        
                        
                    
                        
   
                 
                
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint:(0.5,0.2)
                    pos_hint: {'center_x':0.5, 'center_y':0.5}

                    # Button zum starten des Programmes
                    MDRaisedButton:
                        id: startbtn
                        text: 'Start'
                        font_size: 60
                        size_hint:(0.7,0.2)
                        pos_hint: {'center_x':0.5, 'center_y':0.5}
                        opacity: 1
                        disabled: False
                        on_release: root.button_opacity()
                        

                              
                            
                        

                        
                   
                        
                    